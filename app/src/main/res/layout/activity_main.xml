<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.hbddemo.MainActivity">

    <TextView
        android:id="@+id/hbd"
        android:text="@string/hbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:background="#8F00FF"
        android:textColor="#FFF700"
        android:textAlignment="center"
        android:layout_gravity="top"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/hbd2"
        android:src="@drawable/hbd1"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ty"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:background="#8F00FF"
        android:textColor="#FFF700"
        android:textStyle="bold"
        />
</LinearLayout>
